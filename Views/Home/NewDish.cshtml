@model Dish
<div>
    <h1 class="text-center">Add a new Dish!</h1>
    <h4><a href="/">Home</a></h4>
    <br>
</div>
<form asp-controller="Home" asp-action="savedish" method="post">
    
    <div class="containerCol">
        <div class="containerSpaceBetween">
            <div>
                <label asp-for="Name">Name</label><br>
                <input type="text" asp-for="Name" ><br>
                <span class="alert-danger" asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Calories">Calories</label><br>
                <input type="number" asp-for="Calories" ><br>
                <span class="alert-danger" asp-validation-for="Calories"></span>
            </div>
        </div>
        <div>
            <label>Chef</label><br>
            <select asp-for="ChefId" >
                @foreach (Chef chef in ViewBag.Chefs)
                {
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
            </select><br>
            <span class="alert-danger" asp-validation-for="ChefId"></span>
        </div>
        <div>
            <label asp-for="Tastiness">Tastiness</label><br>
            <select asp-for="Tastiness" >
                <option value="0">Please select a value.</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option> 
            </select><br>
            <span class="alert-danger" asp-validation-for="Tastiness"></span>
        </div>
        <div>
            <label asp-for="Description">Description</label><br>
            <textarea asp-for="Description" cols="30" rows="10"></textarea><br>
            <span class="alert-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <br>
    <input class="btn btn-success" type="submit" style="float:right;" value="Add Dish">
</form>